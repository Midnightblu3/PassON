@model Item

<div class=" col">
	<div class=" card item-card">
		<img src="@Model.ImageThumbnailUrl" class=" card-img-top" alt="@Model.Name">
		<div class=" card-body item-button">
			<a class=" btn btn-secondary"
				asp-controller="ShoppingCart"
				asp-action="AddToShoppingCart"
				asp-route-pieId="@Model.Id">+ Add to cart</a>
			<h4 class="d-grid">
			</h4>

			<div class=" d-flex justify-content-between mt-2">
				<h2 class=" text-start">
					<a class=" item-link" asp-controller="Item" asp-action="Details"
					   asp-route-id="@Model.Id">@Model.Name</a>
				</h2>
				<h5 class=" text-nowrap">
					@Model.Price.ToString("C")
				</h5>
			</div>
		</div>
	</div>
</div>