<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PassOn</title>
    <link href='https://fonts.googleapis.com/css?family=Work+Sans' rel='stylesheet' type='text/css'>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobstrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <link href="~/css/site.css" rel="stylesheet" />
    <base href="/" />

</head>
<body>
    <div class=" container">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-primary" aria-label="PassON navigation header">
            <div class="container-xl">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/Asset 1.png"  class="d-inline-block align-top mb-2 mt-1"
                         alt="PassOn Logo">
                </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                        </li>
                        <li class=" nav-item">
                            <vc:category-menu></vc:category-menu>
                        </li>
                        <li class=" nav-item">
                            <a asp-controller="Contact" asp-action="Index" class="nav-link">Contact</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                                   data-bs-toggle="dropdown"
                                   href="#"
                                   type="button"
                                   id="nav-dropdown"
                                   aria-expanded="false">
                                    My Account
                            </a>
                                <ul class="dropdown-menu" aria-labelledby="nav-dropdown">
                                    <li>
                                        <a asp-controller="MyAccount" asp-action="MyOrders" class="dropdown-item">My Orders</a>
                                    </li>
                                    <li>
                                        <a asp-controller="MyAccount" asp-action="Sell" class="dropdown-item">Sell</a>
                                    </li>
                                </ul>
                        </li>

                    </ul>

                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Item" asp-action="Search">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                            </a>
                        </li>
                    </ul>


                    <vc:shopping-cart-summary></vc:shopping-cart-summary>
                    <partial name = "_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
        <div class="mb-5"></div>
        <div class="pb-5"></div>
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>