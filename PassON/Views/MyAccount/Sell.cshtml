@model SellModel
@inject ICategoryRepository categoryRepository

<form asp-action="Sell" method="post" role="form">
	<h3 class="my-5">
		Post your item information to sell
	</h3>

	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="col-6">
		<div class="row g-2">
			<div class="col-12">
				<label asp-for="Name" class="form-lable"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="col-12">
				<label asp-for="ShortDescription" class="form-lable"></label>
				<input asp-for="ShortDescription" class="form-control" />
				<span asp-validation-for="ShortDescription" class="text-danger"></span>
			</div>
			<div class="col-12">
				<label asp-for="LongDescription" class="form-lable"></label>
				<input asp-for="LongDescription" class="form-control" />
				<span asp-validation-for="LongDescription" class="text-danger"></span>
			</div>
			<div class="col-12">
				<label asp-for="Price" class="form-lable"></label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="col-6">
				<label asp-for="ImageUrl" class="form-lable"></label>
				<input asp-for="ImageUrl" class="form-control" />
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
			</div>
			<div class="col-6">
				<label asp-for="ImageThumbnailUrl" class="form-lable"></label>
				<input asp-for="ImageThumbnailUrl" class="form-control" />
				<span asp-validation-for="ImageThumbnailUrl" class="text-danger"></span>
			</div>
			<div class="col-12">
				<label asp-for="IsPromoted" class="form-lable">Do you want to promote your item?</label>
				<label asp-for="IsPromoted" class="form-lable">
					<input type="radio" asp-for="IsPromoted" class="form-control" value="true" />Yes</label>
				<label asp-for="IsPromoted" class="form-lable">
					<input type="radio" asp-for="IsPromoted" class="form-control" value="false" />No
				</label>
				<span asp-validation-for="IsPromoted" class="text-danger"></span>
			</div>
		</div>
			
				<div class="col-12">
					<label asp-for="CategoryId">Select a category:</label>
				<select asp-for="CategoryId" asp-items="@(new SelectList(categoryRepository.AllCategories(),"Id","Name"))" class="form-control">
					</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>

			<div class="mt-2">
				<div class=" col-md-offset-2 col-md-5">
					<input type="submit" class=" btn btn-secondary" value=" Post Item for Sell" />
				</div>
			</div>
		</div>
	</div>

</form>
